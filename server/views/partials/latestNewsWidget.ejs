<!-- Latest Posts Widget -->
<div class="latest-posts-widget mb-50">


    <% news.forEach(currentNews => { %>
        <% let now = new Date(currentNews.time); %>

        <div class="single-blog-post small-featured-post d-flex">
                <div class="post-thumb">
                    <a href="#"><img src="<%= currentNews.picture %>" alt=""></a>
                </div>
                <div class="post-data">
                    <a href="#" class="post-catagory"><%= currentNews.category %></a>
                    <div class="post-meta">
                        <a href="#" class="post-title">
                            <h6><%= currentNews.textContent %></h6>
                        </a>
                        <!-- <p class="post-date"><span>7:00 AM</span> | <span>April 14</span></p> -->
                        <p class="post-date"><span><%= dateAndTime.format(now, 'h:mm A | MMMM DD') %></span></p>
                    </div>
                </div>
            </div>
    <%}); %> 
</div>